{
    "include":  [
                    "app/**/*.ts",
                    "app/**/*.tsx",
                    ".next/types/**/*.ts"
                ],
    "exclude":  [
                    "node_modules",
                    "client",
                    "server",
                    "shared"
                ],
    "compilerOptions":  {
                            "baseUrl":  ".",
                            "sourceMap":  true,
                            "isolatedModules":  true,
                            "declarationMap":  true,
                            "target":  "ES2020",
                            "paths":  {
                                          "@/app/*":  [
                                                          "./app/*"
                                                      ],
                                          "@/lib/*":  [
                                                          "./app/lib/*",
                                                          "./lib/*"
                                                      ],
                                          "@/shared/*":  [
                                                             "./shared/*"
                                                         ],
                                          "@/components/*":  [
                                                                 "./app/components/*"
                                                             ],
                                          "@/hooks/*":  [
                                                            "./app/hooks/*"
                                                        ],
                                          "@/*":  [
                                                      "."
                                                  ],
                                          "@assets/*":  [
                                                            "./public/assets/*"
                                                        ]
                                      },
                            "resolveJsonModule":  true,
                            "allowImportingTsExtensions":  true,
                            "declaration":  true,
                            "useDefineForClassFields":  true,
                            "skipLibCheck":  true,
                            "strict":  true,
                            "esModuleInterop":  true,
                            "lib":  [
                                        "ES2020",
                                        "DOM",
                                        "DOM.Iterable"
                                    ],
                            "noEmit":  true,
                            "module":  "ESNext",
                            "allowJs":  true,
                            "jsx":  "preserve",
                            "moduleResolution":  "bundler",
                            "plugins":  [
                                            {
                                                "name":  "next"
                                            }
                                        ],
                            "incremental":  true
                        }
}
